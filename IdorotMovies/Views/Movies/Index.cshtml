@model IdorotMovies.Models.MovieIndexViewModel
@{
    ViewData["Title"] = "My Movies";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Movies" asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-sm-4">
            <label class="form-label" for="search">Title</label>
            <input id="search" class="form-control" type="text" name="SearchString" value="@Model.SearchString"
                placeholder="Search title" />
        </div>

        <div class="col-sm-3">
            <label class="form-label" for="genre">Genre</label>
            <select id="genre" class="form-select" asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">All genres</option>
            </select>
        </div>

        <div class="col-sm-3">
            <label class="form-label" for="minYear">Year (and newer)</label>
            <select id="minYear" class="form-select" name="minYear">
                <option value="">All years</option>
                @{
                    var thisYear = DateTime.Now.Year;
                    for (var y = thisYear; y >= thisYear - 50; y--)
                    {
                        <option value="@y" @(Model.MinYear == y ? "selected" : "")>@y and newer</option>
                    }
                }
            </select>
        </div>

        <div class="col-sm-2 d-flex align-items-end">
            <button class="btn btn-primary w-100" type="submit">Filter</button>
        </div>
    </div>
</form>