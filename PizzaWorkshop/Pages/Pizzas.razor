@page "/pizzas"
@using System.Globalization
@using Microsoft.AspNetCore.Components.Web


<PageTitle>Pizzas</PageTitle>

<h3>Pizza List</h3>

@if (pizzas.Count == 0)
{
    <p>Loading…</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in pizzas)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // ✅ Initialize immediately to avoid null warnings
    private readonly List<Pizza> pizzas = new();

    protected override void OnInitialized()
    {
        pizzas.AddRange(new[]
        {
new Pizza { Name = "Margherita", Price = 220m },
new Pizza { Name = "Pepperoni", Price = 280m },
new Pizza { Name = "Hawaiian", Price = 260m },
});
    }

    // ✅ Default string value prevents nullable warning
    public class Pizza
    {
        public string Name { get; set; } = string.Empty;
        public decimal Price { get; set; }
    }
}